---
interface Props {
	title: string;
	content: string;
	image: string;
}

const { title, content, image} = Astro.props;
---

<div class="bg-sky-50 hover:bg-sky-100/75 transition-all rounded-2xl h-full overflow-clip">
	<img class="aspect-video w-full object-cover rounded-2xl" src={image}>
	<div class="p-5 pb-4">
		<h2 class="text-2xl font-extrabold tracking-wide">{title}</h2>
		<p class="text-ellipsis text-lg mt-1.5">{content.slice(0, 150) + "..."}</p>
	</div>
	
</div>