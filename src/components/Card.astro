---
interface Props {
    title: string;
    content: string;
    image: {
        src: string;
        width: number;
        height: number;
        format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
    };
}

const {title, content, image} = Astro.props;
import {Image} from 'astro:assets';
---

<div class="bg-sky-50 show-anim  hover:bg-sky-100/75 transition-all rounded-2xl h-full overflow-clip">
    <Image height={500} width={500} class="aspect-video w-full object-cover rounded-2xl" src={image} alt={title}/>
    <div class="p-5 pb-4">
        <h3 class="text-2xl font-extrabold tracking-tight">{title}</h3>
        <p class="text-ellipsis text-lg mt-1.5">{content.slice(0, 150) + "..."}</p>
    </div>
</div>
